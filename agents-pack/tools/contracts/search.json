{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Search Tool Contract",
  "description": "Input/output schema for the search tool",
  "type": "object",
  "definitions": {
    "input": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
          "description": "Natural language search query",
          "minLength": 1,
          "maxLength": 1000
        },
        "scope": {
          "type": "string",
          "enum": ["notes", "artifacts", "all"],
          "default": "all",
          "description": "Which entity types to search"
        },
        "limit": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 10,
          "description": "Maximum number of results"
        }
      },
      "required": ["query"],
      "additionalProperties": false
    },
    "output": {
      "type": "object",
      "properties": {
        "results": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string", "format": "uuid" },
              "type": { "type": "string", "enum": ["note", "artifact"] },
              "title": { "type": "string" },
              "excerpt": { "type": "string", "maxLength": 500 },
              "relevance": { "type": "number", "minimum": 0, "maximum": 1 },
              "trajectory_id": { "type": "string", "format": "uuid" }
            },
            "required": ["id", "type", "relevance"]
          }
        },
        "total_matches": { "type": "integer", "minimum": 0 },
        "query_embedding_time_ms": { "type": "integer", "minimum": 0 }
      },
      "required": ["results"]
    }
  }
}
