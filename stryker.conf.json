{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "bun",
  "reporters": ["html", "clear-text", "progress"],
  "testRunner": "command",
  "commandRunner": {
    "command": "bun test"
  },
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json",
  "mutate": [
    "caliber-sdk/src/**/*.ts",
    "!caliber-sdk/src/**/*.test.ts",
    "!caliber-sdk/src/**/*.spec.ts"
  ],
  "coverageAnalysis": "perTest",
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "concurrency": 4,
  "timeoutMS": 10000,
  "disableTypeChecks": false
}
