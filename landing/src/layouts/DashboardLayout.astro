---
/**
 * Dashboard Layout
 * Authenticated layout with sidebar navigation
 * Requires authentication - redirects to login if not authenticated
 */
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Dashboard - CALIBER',
  description = 'CALIBER Cloud Dashboard - Manage your AI agent memory',
} = Astro.props;

// Get current path for navigation highlighting
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="noindex, nofollow" />

    <meta name="theme-color" content="#0a0a0b" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen bg-bg-primary text-text-primary antialiased">
    <!-- Auth guard - runs before render -->
    <div id="auth-loading" class="min-h-screen flex items-center justify-center">
      <div class="flex flex-col items-center gap-4">
        <div class="w-8 h-8 border-2 border-neon-purple border-t-transparent rounded-full animate-spin"></div>
        <p class="text-text-secondary">Loading...</p>
      </div>
    </div>

    <!-- Dashboard shell - hidden until authenticated -->
    <div id="dashboard-shell" class="hidden min-h-screen flex">
      <!-- Sidebar -->
      <aside class="hidden lg:flex lg:flex-col lg:w-64 lg:fixed lg:inset-y-0 bg-bg-secondary border-r border-border">
        <!-- Logo -->
        <div class="flex items-center h-16 px-6 border-b border-border">
          <a href="/dashboard" class="flex items-center gap-2">
            <span class="text-xl font-bold font-title">
              <span class="text-text-primary">CALI</span><span class="neon-text-purple">BER</span>
            </span>
          </a>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 px-4 py-6 space-y-1 overflow-y-auto">
          <a
            href="/dashboard"
            class:list={[
              "flex items-center gap-3 px-4 py-3 text-sm font-medium transition-colors brutalist-box-sm",
              currentPath === '/dashboard'
                ? "bg-neon-purple/10 border border-neon-purple/30 text-text-primary"
                : "text-text-secondary hover:text-text-primary hover:bg-white/5 border border-transparent"
            ]}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Overview
          </a>

          <a
            href="/dashboard/trajectories"
            class:list={[
              "flex items-center gap-3 px-4 py-3 text-sm font-medium transition-colors brutalist-box-sm",
              currentPath === '/dashboard/trajectories' || currentPath.startsWith('/dashboard/trajectories/')
                ? "bg-neon-purple/10 border border-neon-purple/30 text-text-primary"
                : "text-text-secondary hover:text-text-primary hover:bg-white/5 border border-transparent"
            ]}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            Trajectories
          </a>

          <a
            href="/dashboard/settings"
            class:list={[
              "flex items-center gap-3 px-4 py-3 text-sm font-medium transition-colors brutalist-box-sm",
              currentPath === '/dashboard/settings'
                ? "bg-neon-purple/10 border border-neon-purple/30 text-text-primary"
                : "text-text-secondary hover:text-text-primary hover:bg-white/5 border border-transparent"
            ]}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Settings
          </a>
        </nav>

        <!-- User section -->
        <div class="p-4 border-t border-border">
          <div id="sidebar-user" class="flex items-center gap-3 px-3 py-2">
            <div class="w-8 h-8 bg-neon-purple/20 border border-neon-purple/30 flex items-center justify-center text-sm font-medium text-text-primary">
              <span id="sidebar-user-initials">?</span>
            </div>
            <div class="flex-1 min-w-0">
              <p id="sidebar-user-name" class="text-sm font-medium text-text-primary truncate">Loading...</p>
              <p id="sidebar-user-email" class="text-xs text-text-muted truncate">...</p>
            </div>
          </div>
          <button
            id="logout-btn"
            class="mt-2 w-full flex items-center gap-2 px-3 py-2 text-sm text-text-muted hover:text-text-secondary hover:bg-white/5 transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            Sign out
          </button>
        </div>
      </aside>

      <!-- Mobile header -->
      <div class="lg:hidden fixed top-0 left-0 right-0 h-16 bg-bg-secondary border-b border-border z-40 flex items-center justify-between px-4">
        <a href="/dashboard" class="flex items-center gap-2">
          <span class="text-xl font-bold font-title">
            <span class="text-text-primary">CALI</span><span class="neon-text-purple">BER</span>
          </span>
        </a>
        <button id="mobile-menu-btn" class="p-2 text-text-secondary hover:text-text-primary">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- Mobile menu overlay -->
      <div id="mobile-menu-overlay" class="hidden lg:hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50"></div>

      <!-- Mobile menu -->
      <div id="mobile-menu" class="hidden lg:hidden fixed top-0 right-0 h-full w-72 max-w-[80vw] bg-bg-secondary border-l border-border z-50 transform">
        <div class="p-4 border-b border-border flex items-center justify-between">
          <span class="text-lg font-bold font-title text-text-primary">Menu</span>
          <button id="mobile-menu-close" class="p-2 text-text-secondary hover:text-text-primary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <nav class="p-4 space-y-1">
          <a
            href="/dashboard"
            class="flex items-center gap-3 px-4 py-3 text-sm font-medium text-text-secondary hover:text-text-primary hover:bg-white/5"
          >
            Overview
          </a>
          <a
            href="/dashboard/trajectories"
            class="flex items-center gap-3 px-4 py-3 text-sm font-medium text-text-secondary hover:text-text-primary hover:bg-white/5"
          >
            Trajectories
          </a>
          <a
            href="/dashboard/settings"
            class="flex items-center gap-3 px-4 py-3 text-sm font-medium text-text-secondary hover:text-text-primary hover:bg-white/5"
          >
            Settings
          </a>
        </nav>
        <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-border">
          <button
            id="mobile-logout-btn"
            class="w-full flex items-center justify-center gap-2 px-4 py-3 text-sm text-text-muted hover:text-text-secondary hover:bg-white/5"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            Sign out
          </button>
        </div>
      </div>

      <!-- Main content -->
      <main class="lg:pl-64 flex-1 min-h-screen pt-16 lg:pt-0">
        <div class="p-4 sm:p-6 lg:p-8">
          <slot />
        </div>
      </main>
    </div>
  </body>
</html>

<script>
  // Auth check
  function checkAuth() {
    const token = localStorage.getItem('caliber_token');
    if (!token) {
      window.location.href = `/login?return_url=${encodeURIComponent(window.location.pathname)}`;
      return false;
    }

    try {
      const payload = JSON.parse(atob(token.split('.')[1]));
      const now = Math.floor(Date.now() / 1000);
      if (payload.exp <= now) {
        localStorage.removeItem('caliber_token');
        localStorage.removeItem('caliber_user');
        window.location.href = `/login?return_url=${encodeURIComponent(window.location.pathname)}`;
        return false;
      }
      return true;
    } catch (e) {
      localStorage.removeItem('caliber_token');
      localStorage.removeItem('caliber_user');
      window.location.href = `/login?return_url=${encodeURIComponent(window.location.pathname)}`;
      return false;
    }
  }

  // Load user data
  function loadUser() {
    const userJson = localStorage.getItem('caliber_user');
    if (userJson) {
      const user = JSON.parse(userJson);

      // Update sidebar
      const nameEl = document.getElementById('sidebar-user-name');
      const emailEl = document.getElementById('sidebar-user-email');
      const initialsEl = document.getElementById('sidebar-user-initials');

      if (nameEl) {
        const displayName = user.firstName && user.lastName
          ? `${user.firstName} ${user.lastName}`
          : user.firstName || user.email;
        nameEl.textContent = displayName;
      }
      if (emailEl) emailEl.textContent = user.email;
      if (initialsEl) {
        const initials = user.firstName && user.lastName
          ? `${user.firstName[0]}${user.lastName[0]}`
          : user.email[0];
        initialsEl.textContent = initials.toUpperCase();
      }
    }
  }

  // Logout handler
  function logout() {
    localStorage.removeItem('caliber_token');
    localStorage.removeItem('caliber_user');
    window.location.href = '/';
  }

  // Mobile menu handlers
  function setupMobileMenu() {
    const menuBtn = document.getElementById('mobile-menu-btn');
    const closeBtn = document.getElementById('mobile-menu-close');
    const overlay = document.getElementById('mobile-menu-overlay');
    const menu = document.getElementById('mobile-menu');

    function openMenu() {
      overlay?.classList.remove('hidden');
      menu?.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }

    function closeMenu() {
      overlay?.classList.add('hidden');
      menu?.classList.add('hidden');
      document.body.style.overflow = '';
    }

    menuBtn?.addEventListener('click', openMenu);
    closeBtn?.addEventListener('click', closeMenu);
    overlay?.addEventListener('click', closeMenu);
  }

  // Initialize
  if (checkAuth()) {
    // Hide loading, show dashboard
    document.getElementById('auth-loading')?.classList.add('hidden');
    document.getElementById('dashboard-shell')?.classList.remove('hidden');

    // Load user
    loadUser();

    // Setup logout buttons
    document.getElementById('logout-btn')?.addEventListener('click', logout);
    document.getElementById('mobile-logout-btn')?.addEventListener('click', logout);

    // Setup mobile menu
    setupMobileMenu();
  }
</script>

<style is:global>
  *, *::before, *::after {
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    min-height: 100vh;
    overflow-x: hidden;
  }
</style>
