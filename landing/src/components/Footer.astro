---
/**
 * Footer Component
 * Links to heyoub.dev, GitHub, docs and AGPL-3.0 license notice
 * Requirements: 7.3, 7.4
 */

const currentYear = new Date().getFullYear();

const links = {
  product: [
    { label: 'Documentation', href: 'https://github.com/heyoub/caliber#readme' },
    { label: 'GitHub', href: 'https://github.com/heyoub/caliber' },
    { label: 'Releases', href: 'https://github.com/heyoub/caliber/releases' },
  ],
  resources: [
    { label: 'Quick Reference', href: 'https://github.com/heyoub/caliber/blob/main/docs/QUICK_REFERENCE.md' },
    { label: 'DSL Parser', href: 'https://github.com/heyoub/caliber/blob/main/docs/DSL_PARSER.md' },
    { label: 'PCP Spec', href: 'https://github.com/heyoub/caliber/blob/main/docs/CALIBER_PCP_SPEC.md' },
  ],
  legal: [
    { label: 'License (AGPL-3.0)', href: 'https://github.com/heyoub/caliber/blob/main/LICENSE' },
    { label: 'Commercial', href: 'https://github.com/heyoub/caliber/blob/main/docs/COMMERCIAL.md' },
  ],
};
---

<footer class="bg-bg-secondary border-t-2 border-border">
  <div class="max-w-7xl mx-auto px-4 py-8 sm:py-12">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 gap-6 sm:gap-8 mb-8 sm:mb-12">
      <!-- Brand Column -->
      <div class="col-span-2 sm:col-span-2 md:col-span-1">
        <a href="/" class="inline-block mb-4">
          <span class="text-2xl font-bold font-title neon-text-cyan">CALIBER</span>
        </a>
        <p class="text-text-secondary text-sm mb-4">
          Postgres-native memory framework for AI agents.
        </p>
        <a 
          href="https://heyoub.dev" 
          target="_blank" 
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-text-muted hover:text-neon-cyan text-sm transition-colors"
        >
          <span>Built by</span>
          <span class="font-semibold">heyoub.dev</span>
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      </div>

      <!-- Product Links -->
      <div>
        <h4 class="font-title font-bold text-text-primary mb-4">Product</h4>
        <ul class="space-y-2">
          {links.product.map((link) => (
            <li>
              <a 
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-text-secondary hover:text-text-primary text-sm transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources Links -->
      <div>
        <h4 class="font-title font-bold text-text-primary mb-4">Resources</h4>
        <ul class="space-y-2">
          {links.resources.map((link) => (
            <li>
              <a 
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-text-secondary hover:text-text-primary text-sm transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal Links -->
      <div>
        <h4 class="font-title font-bold text-text-primary mb-4">Legal</h4>
        <ul class="space-y-2">
          {links.legal.map((link) => (
            <li>
              <a 
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-text-secondary hover:text-text-primary text-sm transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-6 sm:pt-8 border-t border-border flex flex-col sm:flex-row items-center justify-between gap-4">
      <!-- Copyright & License -->
      <div class="text-text-muted text-sm text-center sm:text-left">
        <p>
          Â© {currentYear} CALIBER. Licensed under 
          <a 
            href="https://www.gnu.org/licenses/agpl-3.0.en.html"
            target="_blank"
            rel="noopener noreferrer"
            class="text-neon-cyan hover:text-neon-pink transition-colors"
          >
            AGPL-3.0
          </a>.
        </p>
      </div>

      <!-- Social Links -->
      <div class="flex items-center gap-4">
        <a 
          href="https://github.com/heyoub/caliber"
          target="_blank"
          rel="noopener noreferrer"
          class="text-text-muted hover:text-text-primary transition-colors"
          aria-label="GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
